<Window x:Class="Project_WPM.subwindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_WPM"
        mc:Ignorable="d"
        Title="subwindow2" Height="700" Width="1000">
    <StackPanel Orientation="Horizontal">
        <Grid Margin="20" Width="700 " >
            <Grid.RowDefinitions>
                <RowDefinition Height= "*"/>
                <RowDefinition Height= "*"/>
                <RowDefinition Height= "*"/>
                <RowDefinition Height= "*"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="175.2"/>
                <ColumnDefinition Width="175*"/>
                <ColumnDefinition Width="175*"/>
                <ColumnDefinition Width="174*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="zero_zero" 
                Content=""
                Grid.Row="0"
                Grid.Column="0"
                Margin="3"/>
            <Button x:Name="zero_one" 
                Content=""
                Grid.Row="0"
                Grid.Column="1"
                Margin="3"/>

            <Button x:Name="zero_two" 
                Content=""
                Grid.Row="0"
                Grid.Column="2"
                Margin="3"/>

            <Button x:Name="zero_three" 
                Content=""
                Grid.Row="0"
                Grid.Column="3"
                Margin="3"/>

            <Button x:Name="one_zero" 
                Content=""
                Grid.Row="1"
                Grid.Column="0"
                Margin="3"/>

            <Button x:Name="one_one" 
                Content=""
                Grid.Row="1"
                Grid.Column="1"
                Margin="3"/>

            <Button x:Name="one_two" 
                Content=""
                Grid.Row="1"
                Grid.Column="2"
                Margin="3"/>

            <Button x:Name="one_three" 
                Content=""
                Grid.Row="1"
                Grid.Column="3"
                Margin="3"/>

            <Button x:Name="two_zero" 
                Content=""
                Grid.Row="2"
                Grid.Column="0"
                Margin="3"/>

            <Button x:Name="two_one" 
                Content=""
                Grid.Row="2"
                Grid.Column="1"
                Margin="3"/>
            <Button x:Name="two_two" 
                Content=""
                Grid.Row="2"
                Grid.Column="2"
                Margin="3"/>
            <Button x:Name="two_three" 
                Content=""
                Grid.Row="2"
                Grid.Column="3"
                Margin="3"/>
            <Button x:Name="three_zero" 
                Content=""
                Grid.Row="3"
                Grid.Column="0"
                Margin="3"/>
            <Button x:Name="three_one" 
                Content=""
                Grid.Row="3"
                Grid.Column="1"
                Margin="3"/>
            <Button x:Name="three_two" 
                Content=""
                Grid.Row="3"
                Grid.Column="2"
                Margin="3"/>
            <Button x:Name="three_three" 
                Content=""
                Grid.Row="3"
                Grid.Column="3"
                Margin="3"/>



        </Grid>

        <StackPanel Orientation="Vertical" Margin="0,20,20,20.4" Width="238">
            <Label Content="Easy Mode"
                   HorizontalContentAlignment="Center"
                   Margin="0,0,0,30"
                   FontSize="30"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="10"
                        Background="Beige">
                <Label Content="score :"
                       FontSize="30"/>
                <Label Content="000"
                       Margin="2"
                       Background="White"
                       FontSize="30"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="10"
                        Background="Beige">
                <Label Content="남은카드 :"
                       FontSize="25"/>
                <Label Content="00"
                       Margin="2"
                       Background="White"
                       FontSize="30"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="10"
                        Background="OrangeRed"
                        >
                <Label Content="Timer :"
                       Foreground="White"
                       FontSize="30"/>
                <Label Content="00000"
                       Margin="2"
                       Background="White"
                       FontSize="30"/>
            </StackPanel>
            <Button x:Name="btn_stop"
                    Content="일시정지"
                    Width="120"
                    Height="60"
                    Margin="10,100,10,0"
                    FontSize="20"
                    Click="btn_stop_Click"/>
            <Button x:Name="btn_exit"
                    Content="나가기"
                    Width="120"
                    Height="60"
                    Margin="10,10,10,0"
                    FontSize="20"
                    Click="btn_exit_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
