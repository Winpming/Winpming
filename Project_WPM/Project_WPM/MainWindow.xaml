<Window x:Class="Project_WPM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_WPM"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000">

    <Grid>

        <Grid.Background>
            <ImageBrush  ImageSource="/Resources/background/background_main.jpg" AlignmentY="Top" AlignmentX="Center"/>
        </Grid.Background>
        <StackPanel x:Name="mainStackPanel" Margin="15" >

            <Grid Height="450" Margin="10,0,0.2,0">
                
                <Grid.Background>
                    <ImageBrush Stretch="Fill" ImageSource="/Resources/background/text_main.png" AlignmentY="Top" AlignmentX="Center"/>
                </Grid.Background>
            </Grid>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Height="100">
                <MediaElement Source="C:/Users/user/Desktop/윈도우즈 사진/music_main.mp3"/>
                <Button x:Name="start" Width="297" Click="start_Click" Opacity="1" Margin="0,0,0,-24">
                    <Image Name="btn_start" Source="start_btn.png" Stretch="None" Width="297" Height="124" />
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
